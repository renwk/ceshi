/* pages/mapshow/mapshow.wxss */
page{
    margin:0;
    width: 100%;
}
.img-responsive{
    display: block;
    max-width: 100%;
    height: auto;
}
.container{
    padding-left: 70rpx;
    padding-right: 70rpx;
}
.center-block{
    margin: 0 auto;
    display: block;
}
.b-map-wrap{
    position: relative;
    background: #fff;
    overflow: hidden;
}
.b-map-wrap map{
    height: 1000rpx;
}
.img-responsive{
    display: block;
    max-width: 100%;
    height: auto;
}
.b-header{
    position: absolute;
    left:24rpx;
    top:24rpx;
    width:-webkit-calc(100% - 48rpx);
    width:-moz-calc(100% - 48rpx);
    width:calc(100% - 48rpx);
    /*height: 161px;*/
    background: #fff;
    -webkit-border-radius:36rpx 36rpx;
    -moz-border-radius:36rpx 36rpx;
    border-radius:36rpx 36rpx;

    -moz-box-shadow:0rpx 4rpx 48rpx rgba(3,67,91,.5);
    -webkit-box-shadow:0rpx 4px 48px rgba(3,67,91,.5);
    box-box-shadow:0rpx 4px 48px rgba(3,67,91,.5);
}
.head-conter{
    position: relative;
    overflow: hidden;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-left: 30rpx;
}
.user-share{
    position: absolute;
    right:24rpx;
    top:24rpx;
    color: #37bef0;
    font-size: 24rpx;
}
.span{
    padding-right: 10rpx;
    vertical-align: middle;
}
.icon-share{
    display: inline-block;
    width:40rpx;
    height:40rpx;
    vertical-align: middle;
}
.head-img{
    float: left;
    width:142rpx;
    height:142rpx;
    padding-right:40rpx;
}
.b-map-wrap .b-header .head-img cover-image{
    width: 100%;
    -webkit-border-radius:50% 50%;
    -moz-border-radius:50% 50%;
    border-radius:50% 50%;
}
.user-info{
    float: left;
    width:340rpx;
    font-size: 30rpx;
    color: #999;
    flex-wrap: warp;
    white-space: pre-wrap;
    line-height: 45rpx;
}
.bg-share{
    position: fixed;
    left:0;
    top:-80rpx;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
}
.bg-share cover-image{
    margin:0 auto;
    width:auto;
    max-width: 100%;
}