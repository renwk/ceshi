/* pages/pay/pay.wxss */
page{
    display: block;
    min-height: 100%;
    background-color: #f9f9f9;
}
.target_con{
    padding:24rpx;
    margin-top:24rpx;
    margin-bottom:24rpx;
    background: #fff;
    border-radius: 30rpx;
    font-size:32rpx;
    color: #666;
}
.target_con .title{
    color: #37bef0;
    font-size:32rpx;
    line-height: 42rpx;
    height:42rpx;

}
.target_con .title image{
    display: inline-block;
    width: 42rpx;
    height: 100%;
    margin-right:16rpx;
    vertical-align: middle;
}
.target_con .title text{
    vertical-align: middle;
}

.target_con .target_list{
    margin-top:36rpx;
    letter-spacing: 0.11em;
    line-height: 1.3em;
}
.target_con .target_list .indicators:first-child{
    margin-top: 32rpx;
}
.target_con .target_list .indicators:before{
    content: " ";
    margin-left: 18rpx;
    margin-right: 16rpx;
    position: relative;
    top: -6rpx;
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    background: #fe4b32;
    border-radius: 1998rpx;
}
.target_con .target_list text{
    display: inline-block;
    width:48rpx;
    text-align: center;
}

.target_detail{
    padding:24rpx;
    background: #fff;
    border-radius:30rpx;
    margin:24rpx 0 24rpx;
}
.target_detail .tips{
    margin-top:-10rpx;
    margin-bottom:24rpx;
    color: #fe4b32;
    font-size:32rpx;
}
.target_detail .body_check image{
    display: block;
    margin:0 auto;
    width:auto;
    height: 168rpx;
    max-width:100%;
}

.wxpay_guide{
    position: relative;
}
.wxpay_guide .pay_txt{
    display: block;
    width:100%;
    text-align: center;
    line-height: 1.3em;
    font-size: 36rpx;
    color: #37bef0;
}
.wxpay_guide .pay_txt .realpay{
    color: #ff9809;
}
.wxpay_guide .pay_txt .realpay text{
    font-size: 48rpx;
}
.wxpay_guide .pay_txt .original_price{
    text-decoration:line-through;
    font-style: normal;
}
.wxpay_guide .pay_txt .b_label{
    font-style: normal;
    font-size: 32rpx;
    font-weight: normal;
}

.pay_btn{
    margin-top: 40rpx;
    margin-bottom: 50rpx;
    text-align: center;
}
.pay_btn view{
    display: inline-block;
    padding:14rpx 0 16rpx;
    width: 100%;
    background: #ff9809;
    font-size: 36rpx;
    font-weight:bold;
    color: #fff;
    -webkit-border-radius:60rpx 60rpx;
    -moz-border-radius:60rpx 60rpx;
    border-radius:60rpx 60rpx;
}

