@import "../../weui.wxss";
page{
    margin: 0;
    padding: 0;
}
.weui-navbar{
   position:static;
}
.weui-tab__panel {
  padding-top: 10rpx;  
}
.weui-navbar__item{
    padding-top: 12rpx;
    padding-bottom: 0;
    /* text-align: right; */
    padding-right: 20rpx;
    padding-left: 20rpx;
    border-bottom: none;
    font-size: 32rpx;
    color: #666;
}
.weui-navbar__item:last-child{
    /* text-align: left; */
    /* padding-left: 40rpx; */
}
.weui-navbar__item.weui-bar__item_on{
    border-bottom-color: #fff;
    background: #fff;
    color: #666;
}
.weui-navbar{
    background: #fff;
    border-bottom: none;
}
.weui-navbar:after{
    border-bottom: none;
}
.weui-navbar__item:after{
    border-right: none;
}
.weui-navbar__item .weui-navbar__title{
    display: inline-block;
    /*border-bottom: 4rpx solid #fff;*/
    padding-left: 2rpx;
    padding-right: 2rpx;
    padding-top:12rpx;
    padding-bottom:12rpx;
    background: #ccc;
    color: #666;
    font-size: 30rpx;
    width:100%;
    border-radius:12rpx 12rpx 0 0;
}
.weui-navbar__item.weui-bar__item_on .weui-navbar__title{
    border-bottom-color: #cfba93;
    background: #cfba93;
    color: #fff;
    width:100%;
    border-radius:12rpx 12rpx 0 0;
}
