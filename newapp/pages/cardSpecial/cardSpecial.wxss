@import '../../weui.wxss';
page{
    background: #f9f9f9;
}
.weui-tab__content{
    padding-left: 24rpx;
    padding-right: 24rpx;
    padding-top: 12rpx;
    padding-bottom: 12rpx;
    min-height:1000rpx;
}
.reservation_box{
    overflow: hidden;
    margin-right: 24rpx;
    margin-bottom: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border: 1rpx solid #cfba93;
    border-radius:15rpx;
    background: #fff;
    font-size: 28rpx;
}
.reservation_box .dt{
    overflow: hidden;
    padding-left:24rpx;
    padding-right: 24rpx;
    height: 60rpx;
    border-bottom: 1rpx solid #cfba93;
    border-radius:20rpx 20rpx 0 0;
    line-height:60rpx;
    background: #e3e3e3;
    font-weight: normal;
    vertical-align: middle;
}
.reservation_box .dt .span{
    float: right;
    vertical-align: middle;
}
.reservation_box .dd{
    overflow: hidden;
    padding-left:24rpx;
    padding-right: 24rpx;
    height: 56rpx;
    line-height:56rpx;
    vertical-align: middle;
}
.reservation_box .dd .span{
    display: inline-block;
    min-width: 140rpx;
    color: #666;
}
.statistical {
    border:2rpx solid #cfba93;
    border-radius:0rpx;
}
.table-tr:first-child {
    width: 101%;
    border-bottom:1rpx solid #cfba93;
    background-color: #fff;
}
.table-tr:first-child .table-td{
    border-right:1rpx solid #cfba93;
    background-color: #fff;
}