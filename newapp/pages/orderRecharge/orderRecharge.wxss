
.body {
    background: #f9f9f9;
    padding: 24rpx;
    font-size:28rpx;
}
.con_box{
    margin-bottom: 20rpx;
    padding: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 20rpx;
    background: #fff;
    line-height: 60rpx;
}

.list_box{
    margin: 10rpx;
    list-style: none;
    color: #333;
}
.list_box .span {
    display: inline-block;
    width: 230rpx;
}
.list_coupon{
    text-align: right;
}
.list_coupon .span{
  float: left;
}
.list_coupon .result {
    padding: 12rpx 24rpx 16rpx;
    background: #e3e3e3;
    border-radius: 0 0 20rpx 20rpx;
    margin: 0 -24rpx -24rpx;
}
.table {
  border: 0rpx solid darkgray;
}
.table .tab_title{
  float: left;
  height: 195rpx;
  text-align: center;
  line-height: 195rpx;
}
.tr {
  float: right;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 65rpx;
  align-items: center;
  font-size: 26rpx;
}
.td,.th {
    width:100%;
    justify-content: center;
    text-align: center;
}
.th {
  font-size: 30rpx;
}