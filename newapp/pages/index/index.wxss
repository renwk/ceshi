/**index.wxss**/
page{
    background: #f9f9f9;
}
.head_info {
    position: relative;
    overflow: hidden;
}
.con_box {
    margin-bottom: 40rpx;
    padding: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 20rpx;
    background: #fff;
}
.head_info .user_pic {
    float: left;
    width: 176rpx;
    height: 176rpx;
    border-radius: 99rpx;
}
.head_info .user_name {
    padding-top: 30rpx;
    padding-left: 46rpx;
    float: left;
    font-size: 36rpx;
    padding-right:70rpx;
}

.user_set{
    display: inline-block;
    width: 42rpx;
    height: 44rpx;
}
.head_info .user_operat{
    position: absolute;
    right: 24rpx;
    top: 24rpx;
    display: block;
    z-index: 90;
}
.head_info .user_operat text{
    margin-left: 24rpx;
    display: inline-block;
    vertical-align: middle;
}
.s_icon{
    margin: 0 auto 12rpx;
    display: block;
    width: 56rpx;
    height: 56rpx;
}

.menu_list{
    overflow: hidden;
    width: 100%;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-bottom: 0;
}
.menu_list .menu_one{
    float: left;
    display: block;
    width: 21%;
    margin: 0 2% 24rpx;
    padding: 20rpx 0 10rpx;
    text-align: center;
    color: #333;
    border-radius: 10rpx;
    box-shadow: 0px 6rpx 20rpx rgba(0,0,0,.1);
}
.menu_one text{
    font-size: 28rpx;
}
.modal-content {
    position: relative;
    background-color: #fff;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 2rpx solid #999;
    border: 2px solid rgba(0,0,0,.2);
    border-radius: 12rpx;
    outline: 0;
    -webkit-box-shadow: 0 6rpx 18rpx rgba(0,0,0,.5);
    box-shadow: 0 6rpx 18rpx rgba(0,0,0,.5);
}
.modal-header{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}


/*mask*/
.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/
.drawer_box {
    width: 95%;
    position: fixed;
    top: 2%;
    left: 2.5%;
    z-index: 1001;
    overflow: hidden;
    background: #ffffff;
    border-radius: 30rpx;
}

.drawer_title{
    padding:15rpx;
    font-size: 36rpx;
    text-align: center;
    border-bottom: 2rpx solid #E8E8EA;
}
.drawer_content {
    padding-top:10rpx;
    padding-bottom:10rpx;
    overflow-y: scroll;  /* 超出父盒子高度可滚动*/
}


.paid_btn_wrap {
    padding-bottom: 20rpx;
    margin-bottom: 0;
    overflow: hidden;
    text-align: center;
}


.paid_btn_wrap button {
    width:calc(50% - 12rpx);
    border:2rpx solid #cfba93;
    border-radius:16rpx;
    font-size:26rpx;
    color:#fff;
    background-color:#cfba93;
}


