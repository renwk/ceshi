}

.paid_btn, .paid_btn:visited, .paid_btn:hover, .paid_btn:active, .paid_btn:focus {
    display: inline-block;
    padding-top: 10rpx;
    padding-bottom: 12rpx;
    width: calc(60% - 14rpx);
    border-radius: 20rpx;
    text-align: center;
    font-size: 34rpx;
    color: #fff;
}

.btn, .btn:visited, .btn:hover, .btn:active {
    color: #fff;
}

