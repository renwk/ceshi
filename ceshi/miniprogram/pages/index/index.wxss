/**index.wxss**/
page{
    background: #f9f9f9;
}
.head_info {
    position: relative;
    overflow: hidden;
}
.con_box {
    margin-bottom: 24rpx;
    padding: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 20rpx;
    background: #fff;
}
.head_info .user_pic {
    float: left;
    width: 176rpx;
    height: 176rpx;
    border-radius: 99rpx;
}
.head_info .user_name {
    margin-top: 30rpx;
    margin-left: 46rpx;
    float: left;
    font-size: 36rpx;
}

.user_set{
    display: inline-block;
    width: 42rpx;
    height: 44rpx;
    /* background:url("../../image/icon/set_icon.png") no-repeat; */
}
.head_info .user_operat{
    position: absolute;
    right: 24rpx;
    top: 24rpx;
    display: block;
    z-index: 90;
}
.head_info .user_operat text{
    margin-left: 24rpx;
    display: inline-block;
    vertical-align: middle;
}
.s_icon{
    margin: 0 auto 12rpx;
    display: block;
    width: 56rpx;
    height: 56rpx;
}
.icon_calendar{
    background:url("../../image/icon/calendar_icon.png") no-repeat;
}
.icon_order{
    background:url("../../image/icon/order_icon.png") no-repeat;
}
.icon_diamond{
    background:url("../../image/icon/diamond_icon.png") no-repeat;
}
.icon_info{
    background:url("../../image/icon/info_icon.png") no-repeat;
}
.icon_book{
    background:url("../../image/icon/book_icon.png") no-repeat;
}
.icon_chart{
    background:url("../../image/icon/chart_icon.png") no-repeat;
}
.icon_date{
    background:url("../../image/icon/date_icon.png") no-repeat;
}
.icon_time{
    background:url("../../image/icon/time_icon.png") no-repeat;
}
.menu_list{
    overflow: hidden;
    width: 100%;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-bottom: 0;
}
.menu_list .menu_one{
    float: left;
    display: block;
    width: 21%;
    margin: 0 2% 24rpx;
    padding: 20rpx 0 10rpx;
    text-align: center;
    color: #333;
    border-radius: 10rpx;
    box-shadow: 0px 6rpx 20rpx rgba(0,0,0,.1);
}
.menu_one text{
    font-size: 28rpx;
}
.modal-content {
    position: relative;
    background-color: #fff;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 2rpx solid #999;
    border: 2px solid rgba(0,0,0,.2);
    border-radius: 12rpx;
    outline: 0;
    -webkit-box-shadow: 0 6rpx 18rpx rgba(0,0,0,.5);
    box-shadow: 0 6rpx 18rpx rgba(0,0,0,.5);
}
.modal-header{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}


/*mask*/
.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/
.drawer_box {
    width: 95%;
    position: fixed;
    top: 2%;
    left: 2.5%;
    z-index: 1001;
    overflow: hidden;
    background: #ffffff;
    border-radius: 30rpx;
}

.drawer_title{
    padding:15rpx;
    font-size: 36rpx;
    text-align: center;
    border-bottom: 2rpx solid #E8E8EA;
}
.drawer_content {
    padding-top:10rpx;
    padding-bottom:10rpx;
    overflow-y: scroll;  /* 超出父盒子高度可滚动*/
}

