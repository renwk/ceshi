.reservation_box{
    /* margin-right: 24rpx; */
    margin-top: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border: 2rpx solid #cfba93;
    border-radius:20rpx;
    background: #fff;
    font-size: 28rpx;
}
.reservation_box .dl{
    margin: 0;
}
.reservation_box .dt{
    overflow: hidden;
    padding-left:24rpx;
    height: 60rpx;
    border-bottom: 2rpx solid #cfba93;
    border-radius:20rpx 20rpx 0 0;
    line-height:60rpx;
    background: #e3e3e3;
    font-weight: normal;
    vertical-align: middle;
}
.reservation_box .dt text{
    float: right;
    vertical-align: middle;
    padding-right: 24rpx;
}
.reservation_box .dd{
    padding-left:24rpx;
    padding-right: 24rpx;
    line-height:56rpx;
    vertical-align: middle;
}
.reservation_box .dd text{
    display: inline-block;
    min-width: 140rpx;
    color: #666;
}
.summary_tab .edit_btn{
    position: absolute;
    right: 12px;
