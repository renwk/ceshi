/*mask*/
.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/
.drawer_box {
    width: 95%;
    position: fixed;
    top: 2%;
    left: 2.5%;
    z-index: 1001;
    overflow: hidden;
    background: #ffffff;
    border-radius: 30rpx;
}
.remarks_pcon {
    padding-top:10rpx;
    padding-bottom:10rpx;
