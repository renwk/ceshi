page {
    background: #f9f9f9;
}
.body {
    padding: 24rpx;
}
.con_box{
  overflow: hidden;
  /* position: relative; */
    margin-bottom: 20rpx;
    padding: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 20rpx;
    background: #fff;
    line-height: 60rpx;
}
.reservation_dateicon{
    position: relative;
    top: 24rpx;
    display: inline-block;
    width: 36px;
    height: 32px;
    line-height: 30px;
    text-align: center;
    font-size: 12px;
    color: #454545;
}
.reservation_box{
  float: right;
  margin-bottom: 12px;
  width: 87%;
  border: 1px solid #cfba93;
  border-radius: 10px;
  line-height: 30px;
  font-size: 12px;
}
.card_btn{
    display: inline-block;
    width: 48rpx;
    height: 36rpx;
    border-radius:8rpx;
    position:relative;
    top:6rpx;
}
.dt span{
  float: right;
}
.reservation_box .dt{
  overflow: hidden;
  padding-left: 12px;
  padding-right: 12px;
  height: 30px;
  border-bottom: 1px solid #cfba93;
  border-radius: 10px 10px 0 0;
  line-height: 30px;
  background: #e3e3e3;
  font-weight: normal;
  vertical-align: middle;
  font-size: 12px;
}
.reservation_box .dd{
  overflow: hidden;
  padding-left: 12px;
  padding-right: 12px;
  height: 32px;
  line-height: 32px;
  vertical-align: middle;
  font-size: 12px;
}
.reservation_box .dd span{
  display: inline-block;
    left: 0px;
    padding-right: 0;
    width: 120rpx;
    text-align: left;
}
