.con_box {
    margin-bottom: 24rpx;
    padding: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 20rpx;
    background: #fff;
}

.orderlist_date_select{
    overflow: hidden;
    margin-top: 18rpx;
    padding-left: 62rpx;
    height: 68rpx;
    line-height: 68rpx;
    color: #999;
    /* background:url("http://public.shopzcy.com/shop/img/orderlist_date_select.png") no-repeat left center; */
}
.orderlist_date_select .time_icon{
    display: none;
    width: 38rpx;
    height: 38rpx;
}
.interval{
    padding-bottom: 26rpx;
    width: 120rpx;
    height: 39rpx;
    float: left;
    margin-left: 20rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 30rpx;
    border-bottom-color: #cfba93 !important;
    background: #cfba93 !important;
    color: #fff !important;
}
.orderlist_date_select picker{
    float: left;
    display: inline-block;
    width: calc(50% - 40rpx);
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 22rpx;
    border: 2rpx solid #a6a6a6;
    border-radius: 12rpx;
    font-size: 28rpx;
    outline: none;
    color: #333;
}
.orderlist_date_select input:last-child{
    float: right;
    background-color: #1aad19;
}