.coupon .coupon_head{
    padding-top: 40rpx;
    position: relative;
    float: left;
    width:37%;
    height:100%;
    background: #cfba93;
    text-align: center;
    color: #fff;

}
.coupon .coupon_info{
    padding-top: 40rpx;
    position: relative;
    float: left;
    padding-left:48rpx;
    width:63%;
    height:100%;
    line-height: 2em;
    font-size:24rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.coupon .coupon_info .h3{
    font-size:26rpx;
    color: #333;
}
.coupon .coupon_info p{
    color: #999;
}
.coupon .coupon_info i{
    position: absolute;
    right: -42rpx;
    top: 20rpx;
    display: block;
    width: 170rpx;
    text-align: center;
    background: #e76057;
    font-size: 24rpx;
    color: #fff;
    font-style: normal;
    transform: rotate(45deg);
}
.coupon.coupon_used .coupon_head{
    background: #bfbebe;
}