/* pages/order/index.wxss */
@import '../../weui.wxss';
page{
    background: #f9f9f9;
}
.weui-tab__content{
    padding-left: 24rpx;
    padding-right: 24rpx;
    padding-top: 12rpx;
    padding-bottom: 12rpx;
    min-height:1000rpx;
}
.weui-navbar__item{
    padding-bottom: 0;
    border-bottom: none;
    font-size: 32rpx;
    color: #666;
}
.weui-navbar__item.weui-bar__item_on{
    border-bottom-color: #fff;
    background: #fff;
    color: #666;
}
.weui-navbar__item .weui-navbar__title{
    display: inline-block;
    border-bottom: 4rpx solid #fff;
    min-width:164rpx;
    padding-bottom:22rpx;
    background: #fff;
    color: #666;
}
.weui-navbar__item.weui-bar__item_on .weui-navbar__title{
    border-bottom-color: #cfba93;
    background: #fff;
    color: #cfba93;
}

.con_box {
    margin-bottom: 24rpx;
    padding: 24rpx;
    width: 100%;
    box-sizing: border-box;
    border-radius: 20rpx;
    background: #fff;
}
.orderlist_date_select{
    overflow: hidden;
    margin-bottom: 24rpx;
    padding-left: 62rpx;
    height: 68rpx;
    line-height: 68rpx;
    color: #999;
    /* background:url("../../image/icon/orderlist_date_select.png") no-repeat left center; */
}
.orderlist_date_select .time_icon{
    display: none;
    width: 38rpx;
    height: 38rpx;
}
.interval{
    width: 38rpx;
    height: 60rpx;
    float: left;
    margin-left: 20rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
}
.orderlist_date_select picker{
    float: left;
    display: inline-block;
    width: calc(45% - 40rpx);
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 22rpx;
    border: 2rpx solid #a6a6a6;
    border-radius: 12rpx;
    font-size: 28rpx;
    outline: none;
    color: #333;
}
.orderlist_date_select input:last-child{
    float: right;
    background-color: #1aad19;
}

/*下拉菜单*/
.btn-group, .btn-group-vertical {
    position: relative;
    display: inline-block;
    vertical-align: middle;
}
.caret {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 12rpx;
    vertical-align: middle;
    border-top: 16rpx dashed;
    border-top: 8rpx solid\9;
    border-right: 12rpx solid transparent;
    border-left: 12rpx solid transparent;
}
.dropdown-backdrop{
    background: rgba(0,0,0,.2);
    z-index: 555;
}
.dropdown-toggle{
    position: relative;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    min-width: 256rpx;
    font-size: 29rpx;
    text-align: right;
    border-radius: 15rpx;
    background: #cfba93;
    align-items: center;
    -webkit-align-items: center;
    -webkit-box-align: center;
    z-index: 556;
    zoom: 1;

    float: left;

}
.dropdown-toggle .date_txt{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    text-align: left;
}
.dropdown-toggle,
.dropdown-toggle:visited,
.dropdown-toggle:hover,
.dropdown-toggle:active{
    background: #cfba93;
    color: #fff;
}
.btn-default.active.focus,
.btn-default.active:focus,
.btn-default.active:hover,
.btn-default:active.focus,
.btn-default:active:focus,
.btn-default:active:hover,
.open>.dropdown-toggle.btn-default.focus,
.open>.dropdown-toggle.btn-default:focus,
.open>.dropdown-toggle.btn-default:hover {
    color: #fff;
    background-color: #cfba93;
    border-color: #cfba93;
    box-shadow: none;
    border-radius: 12rpx 12rpx 0 0;
}
.btn-group.open .dropdown-toggle {
    box-shadow: none;
}
.btn-default.active,
.btn-default:active,
.open>.dropdown-toggle.btn-default{
    background-color: #cfba93;
    border-color: #cfba93;
    color: #fff;
    z-index: 556;
}
.btn .caret {
    margin-left: 24rpx;
}
.dropdown-menu{
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 256rpx;
    padding: 10rpx 0;
    margin: 4rpx 0 0;
    font-size: 28rpx;
    text-align: left;
    background-color: #fff;
    background-clip: padding-box;
    border: none;
    box-shadow: 0 24rpx 48rpx rgba(0,0,0,.175);


}
.dropdown-menu>.li{
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}
.dropdown-menu>.li>.a{
    padding-left: 38rpx;
    padding-right: 78rpx;
}
.dropdown-menu>.li>.a.curr{
    background:url("https://api.ispa.cn/public/img/yes_yellow_icon.png") no-repeat right 10px  top 8px; 
    background: right 20rpx  top 16rpx;
    color: #cfba93;
}

.orderlist_select_input{
    position: relative;
    float: right;
    width: calc(100% - 270rpx);
    height: 100%;
}
.orderlist_select_input input{
    padding-left: 10rpx;
    width: 72%;
    height: 68rpx;
    border: 2rpx solid #a6a6a6;
    border-radius: 12rpx;
    outline: none;
    box-shadow: 0 2rpx 3rpx rgba(0,0,0,.175) inset;
}
.orderlist_select_input button{
    position:absolute;
    left:80%;
    top:1rpx;
    display:inline-block;
    width:90rpx;
    height:68rpx;
    text-align:center;
    background-color:#eedcbb;
    border-radius:16rpx;
    font-size:28rpx;
    color:#fff;
    padding-left:14rpx;
    padding-right:14rpx;
    box-sizing:border-box;

    /*background-color: #1aad19;#cfba93*/
}
.inputPla{
    font-size: 28rpx;
    color: #CCCCCC;
}

.order_list{
    width: 100%;
    overflow: hidden;
}
.order_list .tag_add_icon{
    position: relative;
    z-index: 99;
    float: right;
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    margin-left:15rpx;
    vertical-align: middle;
}
