
swiper {
    height: 400rpx;
    padding:30rpx;

}
swiper-item image {
    width: 100%;
}
.swiper-container{
    position: relative;
}
.swiper-container .swiper .img{
    width: 100%;
    height: 85%;
    border-radius: 20rpx;
}
.btn {
    display: block;
    padding: 10rpx 20rpx;
    border-radius: 12rpx;
    text-align: center;
    background: #cfba93;
    box-sizing: border-box;
}
.index_btn_list{
    display: flex;
    height:82rpx;
}
.index_btn_list .btn {
    font-size: 33rpx;
    -webkit-box-flex: 1;
    line-height:60rpx;
    width:73%;
}

.index_btn_list .btn_icon_money .span {
    background-repeat: no-repeat;
    background-position: 0 1px;
    padding: 2rpx 0 2rpx 20rpx;
    color: #fff;
}
.card_escapespa .card_name{
    height:54%;
    width:70%;
    line-height: 34rpx;
    padding-top:100rpx;
    padding-left:39rpx;
    color: #fff;
}
.card_escapespa .card_name .h2{
    font-size: 36rpx;
}
.card_escapespa .card_name .span{
    font-size: 28rpx;

}
.card_escapespa .card_money_year{
    padding-left:39rpx;
    color: #fff;
    font-size: 28rpx;
}
.card_ispa .card_name{
    height:50%;
    width:70%;
    line-height: 34rpx;
    padding-top:108rpx;
    padding-right:42rpx;
    color: #c0a42d;
    float: right;
}
.card_ispa .card_name .h2{
    float:right;
    font-size: 36rpx;
}
.card_ispa .card_name .span{
    float:right;
    font-size: 28rpx;
}
.card_ispa .card_money_year{
    float:right;
    padding-right:42rpx;
    color: #c0a42d;
    font-size: 28rpx;
}
.cards{
    width: 100%;
    height: 85%;
    border-radius: 20rpx;
}
.card {
    position: relative;
    padding: 24rpx;
    margin-bottom: 24rpx;
    overflow: hidden;
    width: 100%;
    height: 338rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
    color: #fff;
}
.card .title {
    overflow: hidden;
    line-height: 1em;
    font-size: 36rpx;
    font-weight: normal;
}
.card .title .img{
    display: inline-block;
    height: 40rpx;
    width: 68rpx;
    vertical-align: middle;
}
.card .title .card_no {
    float: right;
    font-size: 24rpx;
    color: #7d5916;
}
.card .h3{
    margin-top: 20rpx;
    line-height: 1em;
    font-size: 32rpx;
    font-weight: normal;
}
.card .card_info {
    overflow: hidden;
    margin-top: 30rpx;
    font-size: 32rpx;
}
.card_info .money{
    float: left;
    width: 50%;
    padding-right: 48rpx;
    text-align: center;
    box-sizing: border-box;
}
.card_info .discount{
    float: left;
    width: 50%;
}
.card .time{
    margin-top: 20rpx;
    font-size: 24rpx;
}
.tab_con{
    height:360rpx;
    padding:30rpx;
}
.tab_con .tab_title{
    /*margin-top: 10rpx;*/
    /*overflow: hidden;*/
    margin-bottom: 10rpx;
    padding-bottom: 18rpx;
    border-bottom: 2rpx solid #e3e3e3;
    font-size: 36rpx;
    color: #333;
}
.li{
    color: #666;
}
.li text{
    display: inline-block;
    min-width: 200rpx;
    margin-left:10rpx;
}
.def_paymoney{
    color: #cfba93;
    font-size: 36rpx;
    margin-top: 20rpx;
}
.btn_wrap .btn{
    font-size: 33rpx;
    -webkit-box-flex: 1;
    line-height: 60rpx;
    width: 85%;
    color: #fff;
}